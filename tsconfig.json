{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDir": ".",
    "baseUrl": "src",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "test/__mocks__"]
}
